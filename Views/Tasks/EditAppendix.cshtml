@model TaskManager.Models.AppendixViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Appendix</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAppendix" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <input asp-for="FileName" class="form-control custom-file-input" />
                    <label asp-for="FileName" class="custom-file-label">Выберите картинку</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
                </script>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="TaskForModule" asp-route-id="@ViewBag.Id">Назад к списку</a>
</div>
