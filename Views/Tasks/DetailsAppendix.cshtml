@model TaskManager.Data.Appendix

@{
    ViewData["Title"] = "DetailsAppendix";
    var photoPath = "~/Images/" + (Model.FileName ?? "noimage.jpg");
}

<h1>Details</h1>

<div>
    <h4>Appendix</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FileName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileName)
        </dd>
        <dt class="col-sm-2">

            <img src="@photoPath"
                 class="rounded-bottom"
                 height="500" width="500"
                 asp-append-version="true" />
        </dt>
        <dd class="col-sm-10">

        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditAppendix" asp-route-id="@Model.Id">Изменить</a> |
    <a asp-action="TaskForModule" asp-route-id="@ViewBag.Id">Назад к списку</a>
</div>
