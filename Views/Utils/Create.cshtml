@model TaskManager.Data.Utils

@{
    ViewData["Title"] = "Create";
}

<h1>Создать конфигурации</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="firstParameter" class="control-label"></label>
                <input asp-for="firstParameter" class="form-control" />
                <span asp-validation-for="firstParameter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="secondParameter" class="control-label"></label>
                <input asp-for="secondParameter" class="form-control" />
                <span asp-validation-for="secondParameter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="thirdParameter" class="control-label"></label>
                <input asp-for="thirdParameter" class="form-control" />
                <span asp-validation-for="thirdParameter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateDate" class="control-label"></label>
                <input asp-for="UpdateDate" class="form-control" />
                <span asp-validation-for="UpdateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
