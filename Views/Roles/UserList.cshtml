@model IEnumerable<TaskManager.Data.ApplicationUser>

<h2>Список пользователей</h2>

<p>
    <a asp-action="UserCreate">Добавить пользователя</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                ФИО
            </th>
            <th>
                Email
            </th>
            <th>
                Номер телефона
            </th>

            <th>
                Позиция
            </th>
            <th>
                Уровень квалификации
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    @Html.DisplayFor(modelItem => user.Position.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.QualificationLevel.Name)
                </td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="UserEdit" asp-route-userid="@user.Id">Изменить</a>

                </td>
                <td>
                    <form asp-action="UserDelete" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Удалить
                        </button>
                    </form>
                </td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-userid="@user.Id">Права доступа</a>
                </td>

                <td>
                    <a class="btn btn-sm btn-primary" asp-action="ReportSelect" asp-route-userid="@user.Id">Печать</a>
                </td>
            </tr>
        }
</table>

<a asp-action="Index" class="btn btn-secondary">Роли</a>