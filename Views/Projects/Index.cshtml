@model IEnumerable<TaskManager.Data.Project>

@{
    ViewData["Title"] = "Index";
}

<h1>Проекты</h1>

<p>
    <a asp-action="Create">Создать проект</a>
</p>
<table  class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Изменить</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark">Детали</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a> 
                    <a class="btn btn-sm btn-primary" asp-action="EditUserForProject" asp-route-id="@item.Id">Список исполнителей</a>
                    <a class="btn btn-sm btn-primary" asp-action="ModuleForProject" asp-route-id="@item.Id">Список модулей</a>
                </td>
            </tr>
        }
    </tbody>
</table>
