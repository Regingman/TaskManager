@model TaskManager.Data.Module

@{
    ViewData["Title"] = "Create";
}

<h1>Создание модуля</h1>



<span class="text-danger">@ViewBag.ErrorMassage</span>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateModuleForProject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ProjectId"  value="@ViewBag.ProjectId"/>

            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" value="@ViewBag.firstDate" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" asp-route-id="@ViewBag.ProjectId" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ModuleForProject" class="btn btn-secondary">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
