@model TaskManager.Data.Module

@{
    ViewData["Title"] = "Details";
}

<h1>Подробная информация</h1>

<div>
    <h4>Модуль</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Проект
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Name)
        </dd>
        <dt class="col-sm-2">
            Дата завершения
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditModuleForProject" asp-route-id="@Model.Id" class="btn btn-info">Изменить</a> |
    <a asp-action="ModuleForProject" asp-route-id="@Model.ProjectId" class="btn btn-secondary">Назад</a>
</div>
